generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum ReportStatus {
  UNDER_REVIEW
  ACTION_TAKEN
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String   @unique
  password       String
  role           Role     @default(USER)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  reports        Report[] @relation("ReportedBy")
  solvedReports  Report[] @relation("SolvedBy")
}

model Report {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  text            String
  location        String
  assets          String[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  reportedUserId  String   @db.ObjectId
  reportedUser    User     @relation("ReportedBy", fields: [reportedUserId], references: [id])

  solvedUserId    String   @db.ObjectId
  solvedUser      User     @relation("SolvedBy", fields: [solvedUserId], references: [id])
}
